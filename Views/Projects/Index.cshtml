@model IEnumerable<ProjectWebAppMock.Models.Project>

@{
  ViewData["Title"] = "Index";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

@if (Model.Count() == 0 && User.Identity.IsAuthenticated)
{
  <div class="text-center m-2">
    <form asp-action="SeedDatabase" method="post">
      <button type="submit" class="btn btn-danger">Seed Database</button>
    </form>
  </div>

}
else
{
  <p>
    <a class="btn btn-primary" asp-action="Create">Create New Project</a>
  </p>
  <table class="table">
    <thead>
      <tr>
        <th>
          @Html.DisplayNameFor(model => model.ProjectTitle)
        </th>
        <th>
          @Html.DisplayNameFor(model => model.ProjectDescription)
        </th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      @foreach (var item in Model)
      {
        <tr>
          <td>
            @Html.DisplayFor(modelItem => item.ProjectTitle)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.ProjectDescription)
          </td>
          <td style="width:150px;">
            <a asp-action="Edit" asp-route-id="@item.ProjectId">Edit</a> |
            <a asp-action="Details" asp-route-id="@item.ProjectId">Display</a> |
            <a asp-action="Delete" asp-route-id="@item.ProjectId">Delete</a>
          </td>
        </tr>
      }
    </tbody>
  </table>

}


